doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(script-src 'self' "https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
        title #{title}
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(rel="stylesheet" href="/css/style.css")

    body
        .container
            .col.text-center
                .card.mb-4.rounded-3.shadow-sm
                    .card-header.py-3
                        h4.my-0.fw-normal Apple iPhone 11 (64GB) - Black
                        img.phone(src="/img/iphone11.png" alt="Apple iPhone 11 (64GB) - Black")

                    .card-body
                        h1.card-title.pricing-card-title $499
                            small.text-muted.fw-light Price: 


                        ul.list-unstyled.mt-3.mb-4.left-text-align
                            li * 6.1-inch (15.5 cm diagonal) Liquid Retina HD LCD display
                            li * Water and dust resistant (2 meters for up to 30 minutes, IP68)
                            li * Dual-camera system with 12MP Ultra Wide and Wide cameras; Night mode, Portrait mode, and 4K video up to 60fps
                            li * 12MP TrueDepth front camera with Portrait mode, 4K video, and Slo-Mo
                            li * Face ID for secure authentication
                            li * A13 Bionic chip with third-generation Neural Engine
                            li * Fast-charge capable
                            li * Wireless charging
                        button#buy-item.w-100.btn.btn-lg.btn-outline-primary.buy-btn Buy Now

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
        script(src="https://js.stripe.com/v3/") 
        script(src="/js/bundle.js") 
